doctype html5
head
	link(rel='stylesheet', href='css/style.css')
	link(rel='stylesheet', href='css/font-awesome-4.2.0.min.css')
body
	#page
		#everything-but-footer
			#header
			#main
				input.title.js-title
				.tree-view
					ul
					button.add-sub-task.js-add-sub-task: i.fa.fa-plus
			#footer

	#modal-overlay

script(src='//localhost:35729/livereload.js')

script(src='js/vendor/jquery-2.1.3.min.js')
script(src='js/vendor/jquery-ui-1.11.2.drag-drop.min.js')
script(src='js/vendor/underscore-1.7.0.min.js')
script(src='js/vendor/backbone-1.1.2.min.js')
script(src='js/vendor/backbone-nested-0.7.0.min.js')

script(src='js/ModalOverlayView.js')
script(src='js/ModalDialogView.js')
script(src='js/ModalTaskEditDialogView.js')

script(src='js/ProjectView.js')
script(src='js/ProjectTreeView.js')
script(src='js/ProjectTreeSubTaskView.js')
script(src='js/ProjectTreeSubTaskListView.js')
script(src='js/guid.js')
script(src='js/task.js')
script(src='js/main.js')


script.js-task(type='template')
	li
		.task.js-task
			h1
			input
			.description.js-description
			i.fa.fa-plus-square.button.add-sub-task.js-add-sub-task
			i.fa.fa-cog.button.task-details.js-task-details
			.drop-target.before(rel='before')
			.drop-target.after(rel='after')
			.drop-target.child(rel='child')
		ul

script.js-edit-task-dialog(type='template')
	.dialog.edit-task

		input.title.js-title

		.colors
			each color in ['white', 'black', 'red', 'orange', 'yellow', 'green', 'blue', 'purple']
				label(class=color)
					input(type='radio', name='color', value=color)
					span

		.estimates
			label
				span Min estimate
				input.from.js-from(placeholder='Unknown')
			label
				span Max estimate
				input.to.js-to(placeholder='Unknown')
			label
				span Actual
				input.actual.js-actual(placeholder='Unknown')

		textarea.js-description

		button.delete.js-delete
			i.fa.fa-remove
			|  Delete

		i.fa.fa-close.button.close.js-close
